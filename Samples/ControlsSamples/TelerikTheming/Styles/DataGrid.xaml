    <Style x:Key="DataGridSearchPanelRadioButtonStyle_Mobile" TargetType="RadioButton">
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="ControlTemplate">
            <ControlTemplate>
                <Grid ColumnDefinitions="Auto, *"
                      ColumnSpacing="4">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CheckedStates">
                                <VisualState x:Name="Checked">
                                    <VisualState.Setters>
                                        <Setter TargetName="check" Property="Label.TextColor" Value="{DynamicResource RadPrimaryColor}" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Unchecked" />
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                    <Label x:Name="check"
                           Text="{x:Static telerikMaui:TelerikFont.IconOk}"
                           TextColor="Transparent"
                           FontFamily="{x:Static telerikMaui:TelerikFont.Name}"
                           FontSize="16"
                           WidthRequest="44"
                           HeightRequest="44"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center" />
                    <ContentPresenter Grid.Column="1"
                                      VerticalOptions="{TemplateBinding VerticalOptions}" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style x:Key="DataGridSearchPanelRadioButtonStyle_Desktop" TargetType="RadioButton">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Padding" Value="6, 0" />
        <Setter Property="ControlTemplate">
            <ControlTemplate>
                <Grid ColumnDefinitions="Auto, *"
                      ColumnSpacing="6">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CheckedStates">
                                <VisualState x:Name="Checked">
                                    <VisualState.Setters>
                                        <Setter TargetName="outerEllipse" Property="Ellipse.Fill" Value="{DynamicResource RadPrimaryColor}" />
                                        <Setter TargetName="outerEllipse" Property="Ellipse.Stroke" Value="{DynamicResource RadPrimaryColor}" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Unchecked" />
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                    <Grid>
                        <Ellipse x:Name="outerEllipse"
                                 Stroke="{DynamicResource RadBorderColor}"
                                 Fill="{DynamicResource RadAppSurfaceColor}"
                                 WidthRequest="16"
                                 HeightRequest="16"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center" />
                        <Ellipse x:Name="check"
                                 IsVisible="{TemplateBinding IsChecked}"
                                 Fill="{DynamicResource RadOnPrimaryColor}"
                                 WidthRequest="6"
                                 HeightRequest="6"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center" />
                    </Grid>
                    <ContentPresenter Grid.Column="1" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

    <telerik:AreEqualToBoolConverter x:Key="DataGridSearchAreEqualToBoolConverter" />

    <ControlTemplate x:Key="DataGridSearchPanelTemplate">
        <telerik:RadToolbar BackgroundColor="Yellow"
                            BindingContext="{TemplateBinding DataGrid.SearchSettings}"
                            BorderThickness="1, 1, 1, 0"
                            ContentPadding="{OnPlatform Android='16, 0', iOS='16, 3', MacCatalyst='12, 4', WinUI='8, 2'}"
                            OverflowMode="Clip">
            <telerik:EntryToolbarItem PlacementOptions="ToolStrip"
                                      Text="{Binding IntermediateSearchText}"
                                      telerik:EntryExtensions.CompletedCommand="{Binding SearchEntryCompletedCommand}"
                                      Style="{StaticResource DataGridSearchPanelEntryToolbarItemStyle}" />
            <telerik:OptionsButtonToolbarItem Style="{StaticResource DataGridSearchPanelSearchOptionsButtonToolbarItemStyle}">
                <telerik:OptionsButtonToolbarItem.ImageSource>
                    <FontImageSource Glyph="{x:Static telerik:TelerikFont.IconDotsVert}"
                                     FontFamily="{x:Static telerik:TelerikFont.Name}"
                                     Size="{OnPlatform Default=16, MacCatalyst=12}" />
                </telerik:OptionsButtonToolbarItem.ImageSource>
                <telerik:OptionsButtonToolbarItem.DropDownContentTemplate>
                    <ControlTemplate>
                        <telerik:DropDownButtonToolbarItemViewContent ContentPadding="{OnPlatform MacCatalyst='5, 10'}">
                            <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto"
                                  RowSpacing="{OnPlatform MacCatalyst=8}">
                                <Grid ColumnDefinitions="Auto, *"
                                      ColumnSpacing="{OnPlatform Android=14, iOS=16, MacCatalyst=6, WinUI=7}"
                                      Padding="{OnPlatform Android=10, iOS='10, 11, 22, 11', MacCatalyst='7.5, 0', WinUI='0, 10'}"
                                      Margin="{OnPlatform WinUI='12, 0'}"
                                      telerik:RadCheckBox.ToggleOnTap="{Binding Source={x:Reference caseSensitiveCheckBox}}">
                                    <telerik:RadCheckBox x:Name="caseSensitiveCheckBox"
                                                          IsChecked="{Binding CaseSensitive}" />
                                    <Label Grid.Column="1"
                                           Text="{telerik:Localize DataGrid_Search_CaseSensitive}"
                                           FontSize="{OnPlatform iOS=17, MacCatalyst=13}" />
                                </Grid>
                                <BoxView Grid.Row="1"
                                         Style="{StaticResource DataGridSearchPanelSearchOptionsDropDownSeparatorStyle}" />
                                <Grid Grid.Row="2"
                                      RowDefinitions="Auto, Auto, Auto"
                                      RowSpacing="{OnPlatform MacCatalyst=8}"
                                      Padding="{OnPlatform WinUI='8, 0'}">
                                    <RadioButton IsChecked="{Binding TextMatchMode, Converter={StaticResource DataGridSearchAreEqualToBoolConverter}, ConverterParameter={x:Static telerikDataGrid:DataGridSearchTextMatchMode.Contains}}"
                                                 Content="{telerik:Localize DataGrid_Search_Contains}"
                                                 Style="{OnPlatform Android={StaticResource DataGridSearchPanelRadioButtonStyle_Mobile},
                                                                    iOS={StaticResource DataGridSearchPanelRadioButtonStyle_Mobile},
                                                                    MacCatalyst={StaticResource DataGridSearchPanelRadioButtonStyle_Desktop}}" />
                                    <RadioButton Grid.Row="1"
                                                 IsChecked="{Binding TextMatchMode, Converter={StaticResource DataGridSearchAreEqualToBoolConverter}, ConverterParameter={x:Static telerikDataGrid:DataGridSearchTextMatchMode.StartsWith}}"
                                                 Content="{telerik:Localize DataGrid_Search_StartsWith}"
                                                 Style="{OnPlatform Android={StaticResource DataGridSearchPanelRadioButtonStyle_Mobile},
                                                                    iOS={StaticResource DataGridSearchPanelRadioButtonStyle_Mobile},
                                                                    MacCatalyst={StaticResource DataGridSearchPanelRadioButtonStyle_Desktop}}" />
                                    <RadioButton Grid.Row="2"
                                                 IsChecked="{Binding TextMatchMode, Converter={StaticResource DataGridSearchAreEqualToBoolConverter}, ConverterParameter={x:Static telerikDataGrid:DataGridSearchTextMatchMode.WholeWord}}"
                                                 Content="{telerik:Localize DataGrid_Search_WholeWord}"
                                                 Style="{OnPlatform Android={StaticResource DataGridSearchPanelRadioButtonStyle_Mobile},
                                                                    iOS={StaticResource DataGridSearchPanelRadioButtonStyle_Mobile},
                                                                    MacCatalyst={StaticResource DataGridSearchPanelRadioButtonStyle_Desktop}}" />
                                </Grid>
                                <BoxView Grid.Row="3"
                                         Style="{StaticResource DataGridSearchPanelSearchOptionsDropDownSeparatorStyle}" />
                                <Grid Grid.Row="4"
                                      ColumnDefinitions="Auto, *"
                                      ColumnSpacing="{OnPlatform Android=14, iOS=16, MacCatalyst=6, WinUI=7}"
                                      Padding="{OnPlatform Android=10, iOS='10, 11, 22, 11', MacCatalyst='7.5, 0', WinUI='0, 10'}"
                                      Margin="{OnPlatform WinUI='12, 0'}"
                                      telerik:RadCheckBox.ToggleOnTap="{Binding Source={x:Reference applyFilterCheckBox}}">
                                    <telerik:RadCheckBox x:Name="applyFilterCheckBox"
                                                          IsChecked="{Binding ApplyFilter}" />
                                    <Label Grid.Column="1"
                                           Text="{telerik:Localize DataGrid_Search_ApplyFilter}"
                                           FontSize="{OnPlatform iOS=17, MacCatalyst=13}" />
                                </Grid>
                            </Grid>
                        </telerik:DropDownButtonToolbarItemViewContent>
                    </ControlTemplate>
                </telerik:OptionsButtonToolbarItem.DropDownContentTemplate>
            </telerik:OptionsButtonToolbarItem>
            <telerik:LabelToolbarItem Text="{Binding ResultsSummary}"
                                      IsVisible="{OnPlatform Android=False, iOS=False}" />
            <telerik:ButtonToolbarItem PlacementOptions="ToolStrip"
                                       Command="{Binding CloseSearchPanelCommand}"
                                       IsVisible="{Binding IsCloseSearchPanelButtonVisible}"
                                       Style="{StaticResource DataGridSearchPanelCloseButtonToolbarItemStyle}">
                <telerik:LabelToolbarItem.ImageSource>
                    <FontImageSource Glyph="{x:Static telerikMaui:TelerikFont.IconCross}"
                                     FontFamily="{x:Static telerikMaui:TelerikFont.Name}"
                                     Size="16" />
                </telerik:LabelToolbarItem.ImageSource>
            </telerik:ButtonToolbarItem>
        </telerik:RadToolbar>
    </ControlTemplate>

