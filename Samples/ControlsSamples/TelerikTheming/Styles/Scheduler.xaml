                       Text="{telerik:Localize Scheduler_EditAppointmentDialog_AllDay}"
                       Style="{StaticResource SchedulerEditAppointmentDialogLabelStyle}" />
                <Switch Grid.Row="2"
                        Grid.Column="1"
                        HorizontalOptions="End"
                        IsToggled="{Binding IsAllDayAppointment, Mode=TwoWay}"
                        IsEnabled="{Binding IsReadOnly, Converter={StaticResource SchedulerInvertedBooleanConverter}}" />
                <telerik:SchedulerBoxView Grid.Row="3"
                                          Style="{StaticResource SchedulerDialogSeparatorStyle}" />
                <Label Grid.Row="4"
                       Text="{telerik:Localize Scheduler_EditAppointmentDialog_StartTime}"
                       Style="{StaticResource SchedulerEditAppointmentDialogLabelStyle}" />
                <HorizontalStackLayout Grid.Row="4"
                                       Grid.Column="1"
                                       Spacing="4"
                                       HorizontalOptions="End"
                                       IsEnabled="{Binding IsReadOnly, Converter={StaticResource SchedulerInvertedBooleanConverter}}">
                    <telerik:RadDatePicker Date="{Binding ActualStartDate, Mode=TwoWay}"
                                           WidthRequest="102"
                                           BorderThickness="{OnPlatform Android=0}" />
                    <telerik:RadTimePicker Time="{Binding ActualStartTimeOfDay, Mode=TwoWay}"
                                           WidthRequest="62"
                                           IsVisible="{Binding IsAllDayAppointment, Converter={StaticResource SchedulerInvertedBooleanConverter}}"
                                           SpinnerFormat="H:mm"
                                           MinuteStep="15"
                                           BorderThickness="{OnPlatform Android=0}" />
                </HorizontalStackLayout>
                <telerik:SchedulerBoxView Grid.Row="5"
                                          Style="{StaticResource SchedulerDialogSeparatorStyle}" />
                <Label Grid.Row="6"
                       Text="{telerik:Localize Scheduler_EditAppointmentDialog_EndTime}"
                       Style="{StaticResource SchedulerEditAppointmentDialogLabelStyle}" />
                <HorizontalStackLayout Grid.Row="6"
                                       Grid.Column="1"
                                       Spacing="4"
                                       HorizontalOptions="End"
                                       IsEnabled="{Binding IsReadOnly, Converter={StaticResource SchedulerInvertedBooleanConverter}}">
                    <telerik:RadDatePicker MinimumDate="{Binding ActualStartDate}"
                                           Date="{Binding ActualEndDate, Mode=TwoWay}"
                                           WidthRequest="102"
                                           BorderThickness="{OnPlatform Android=0}" />
                    <telerik:RadTimePicker Time="{Binding ActualEndTimeOfDay, Mode=TwoWay}"
                                           WidthRequest="62"
                                           IsVisible="{Binding IsAllDayAppointment, Converter={StaticResource SchedulerInvertedBooleanConverter}}"
                                           SpinnerFormat="H:mm"
                                           MinuteStep="15"
                                           MinimumTime="{Binding MinimumEndTimeOfDay, Mode=TwoWay}"
                                           BorderThickness="{OnPlatform Android=0}" />
                </HorizontalStackLayout>
                <telerik:SchedulerBoxView Grid.Row="7"
                                          Style="{StaticResource SchedulerDialogSeparatorStyle}" />
                <Label Grid.Row="8"
                       Text="{telerik:Localize Scheduler_EditAppointmentDialog_Repeat}"
                       IsVisible="{Binding IsExceptionOccurrence, Converter={StaticResource SchedulerInvertedBooleanConverter}}"
                       Style="{StaticResource SchedulerEditAppointmentDialogLabelStyle}" />
                <telerik:RadComboBox Grid.Row="8"
                                     Grid.Column="1"
                                     HorizontalOptions="End"
                                     IsClearButtonVisible="False"
                                     SelectedItem="{Binding RepeatOption, Mode=TwoWay}"
                                     IsVisible="{Binding IsExceptionOccurrence, Converter={StaticResource SchedulerInvertedBooleanConverter}}"
                                     IsEnabled="{Binding IsReadOnly, Converter={StaticResource SchedulerInvertedBooleanConverter}}"
                                     ItemsSource="{Binding RepeatOptions}"
                                     WidthRequest="168"
                                     DropDownHeight="{Binding RepeatOptionsDropDownHeight}"
                                     BorderThickness="{OnPlatform Android=0}" />
                <Grid Grid.Row="9"
                      Grid.ColumnSpan="2"
                      IsVisible="{Binding IsExceptionOccurrence, Converter={StaticResource SchedulerInvertedBooleanConverter}}">
                    <Label IsVisible="{Binding Summary, Converter={StaticResource SchedulerStringToBoolConverter}}"
                           Text="{Binding Summary}"
                           Style="{StaticResource SchedulerDialogLabelStyle}"
                           FontSize="12"
                           Margin="0, 8, 0, 4" />
                </Grid>
                <telerik:SchedulerBoxView Grid.Row="10"
                                          IsVisible="{Binding IsExceptionOccurrence, Converter={StaticResource SchedulerInvertedBooleanConverter}}"
                                          Style="{StaticResource SchedulerDialogSeparatorStyle}" />
                <Editor Grid.Row="11"
                        Grid.ColumnSpan="2"
                        FontSize="{OnPlatform iOS=17}"
                        Text="{Binding Description, Mode=TwoWay}"
                        TextColor="{DynamicResource RadOnAppSurfaceColor}"
                        VerticalTextAlignment="Start"
                        Placeholder="{telerik:Localize Scheduler_EditAppointmentDialog_Description}"
                        PlaceholderColor="{DynamicResource RadSubtleColor}"
                        Background="{DynamicResource RadAppSurfaceColor}" />
            </Grid>
            <Grid Grid.Row="2"
                  ColumnDefinitions="*, *"
                  BackgroundColor="{DynamicResource RadSurfaceColor}"
                  Margin="0, 8, 0, 0">
                <telerik:SchedulerBoxView Grid.ColumnSpan="2"
                                          HeightRequest="1"
                                          VerticalOptions="Start" />
                <telerik:RadButton Style="{StaticResource RadFlatButtonStyle}"
                                   Text="{telerik:Localize Scheduler_EditAppointmentDialog_Cancel}"
                                   Command="{Binding CancelCommand}" />
                <telerik:RadButton Grid.Column="1"
                                   Style="{StaticResource RadPrimaryFlatButtonStyle}"
                                   Text="{telerik:Localize Scheduler_EditAppointmentDialog_Save}"
                                   IsEnabled="{Binding IsReadOnly, Converter={StaticResource SchedulerInvertedBooleanConverter}}"
                                   Command="{Binding SaveCommand}" />
            </Grid>
        </Grid>
    </ControlTemplate>
