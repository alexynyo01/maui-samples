    <ControlTemplate x:Key="SchedulerEditAppointmentDialogTemplate">
        <Grid RowDefinitions="{OnPlatform Default='40, *, 56', iOS='44, *, 52'}"
              Padding="0, 8, 0, 0">
            <Label Text="{Binding Header}"
                   Style="{StaticResource SchedulerDialogHeaderLabelStyle}" />
            <Grid Grid.Row="1"
                  RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, *"
                  ColumnDefinitions="Auto, *"
                  BindingContext="{TemplateBinding BindingContext}"
                  Padding="16, 4, 16, 0">
                <Label Text="{telerik:Localize Scheduler_EditAppointmentDialog_Subject}"
                       Style="{StaticResource SchedulerEditAppointmentDialogLabelStyle}" />
                <telerik:RadEntry Grid.Column="1"
                                  IsEnabled="{Binding IsReadOnly, Converter={StaticResource SchedulerInvertedBooleanConverter}}"
