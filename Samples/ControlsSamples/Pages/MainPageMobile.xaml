<qsf:QSFPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:views="clr-namespace:QSF.Views"
             xmlns:converters="clr-namespace:QSF.Converters"
             xmlns:qsf="clr-namespace:QSF.Pages"
             ios:Page.UseSafeArea="False"
             NavigationPage.HasNavigationBar="False"
             x:Class="QSF.Pages.MainPageMobile">

    <ContentPage.Resources>
        <converters:StatusTagToColorConverter x:Key="StatusTagToColorConverter" NewColor="#FD5064" UpdatedColor="#FF9040" BetaColor="{StaticResource AccentColor8}" />
        <converters:StatusTagToStringConverter x:Key="StatusTagToStringConverter" NewValue="New" UpdatedValue="Upd" BetaValue="Beta" />
    </ContentPage.Resources>

    <Grid x:Name="root" RowDefinitions="0, Auto, *, 0" ColumnDefinitions="0, *, 0" IgnoreSafeArea="True">
        <Grid x:Name="header" ZIndex="2"
                Style="{StaticResource HeaderStyle}"
                BackgroundColor="Transparent"
                Grid.Row="1"
                Grid.Column="1"
                Padding="12, 0">
            <Grid ColumnDefinitions="Auto,*,Auto" IgnoreSafeArea="True">
                <Image Style="{StaticResource HeaderImageStyle}" />
                <Label Grid.Column="1"
                    Style="{StaticResource HeaderLabelStyle}"
                    FontSize="{OnIdiom Desktop=18, Phone=14}" />
                <HorizontalStackLayout Grid.Column="2">
                    <ImageButton Clicked="Settings_Clicked"
                                Source="settings.png"
                                WidthRequest="35"
                                HeightRequest="35"
                                Aspect="Center"
                                HorizontalOptions="EndAndExpand"
                                VerticalOptions="Center"
                                BackgroundColor="Transparent" />
                    <ImageButton Clicked="Search_Clicked"
                                Source="searchheader.png"
                                WidthRequest="35"
                                HeightRequest="35"
                                Aspect="Center"
                                HorizontalOptions="EndAndExpand"
                                VerticalOptions="Center"
                                BackgroundColor="Transparent" 
                                AutomationId="searchButton" />
                </HorizontalStackLayout>
            </Grid>
        </Grid>

        <Grid x:Name="headerBackground" ZIndex="-1" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="3" Background="{StaticResource ApplicationAccentColor}" IgnoreSafeArea="True" />
        <OnPlatform x:TypeArguments="View">
            <On Platform="iOS">
                <Grid ZIndex="1" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="3" IgnoreSafeArea="True">
                    <Grid x:Name="acrylic" Background="{StaticResource ApplicationAccentColor}" IgnoreSafeArea="True" />
                </Grid>
            </On>
            <On Platform="Android">
                <Grid ZIndex="1" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="3" Background="{StaticResource ApplicationAccentColor}" IgnoreSafeArea="True" />
            </On>
        </OnPlatform>
        <Grid x:Name="pageBackground" ZIndex="-2" Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="3" Background="{AppThemeBinding Light=White, Dark=Black}" />

        <Grid x:Name="content" ZIndex="0" Grid.Row="2" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" IgnoreSafeArea="True">
            <telerik:RadCollectionView x:Name="controlsCollectionView"
                    Grid.Row="1" 
                    ItemsSource="{Binding Controls}"
                    ItemTapped="controlsCollectionView_ItemTapped"
                    SelectionMode="None"
                    Margin="16, 16, 16, 0"
                    AutomationId="controlsCollectionView">
                <telerik:RadCollectionView.ItemsLayout>
                    <telerik:CollectionViewLinearLayout ItemLength="96" />
                </telerik:RadCollectionView.ItemsLayout>
                <telerik:RadCollectionView.ItemViewStyle>
                    <Style TargetType="telerik:RadCollectionViewItemView">
                        <Setter Property="BorderThickness" Value="0, 0, 0, 1" />
                        <Setter Property="BackgroundColor" Value="{StaticResource ItemBackgroundColor}" />
                        <Setter Property="BorderColor" Value="{StaticResource SeparatorColor}" />
                    </Style>
                </telerik:RadCollectionView.ItemViewStyle>
                <telerik:RadCollectionView.HeaderTemplate>
                    <DataTemplate>
                        <Grid RowDefinitions="Auto, Auto"
                            RowSpacing="10"
                            Margin="0, 0, 0, 10">
                            <views:HighlightsView />
                            <Grid Grid.Row="1">
                                <Label Text="All Controls"
                                    HorizontalOptions="Start"
                                    VerticalOptions="End"
                                    FontSize="{OnPlatform Default=22, Android=24}" />
                                <telerik:RadButton Command="{Binding NavigateToDownloadTrialCommand}"
                                                HorizontalOptions="End"
                                                Style="{StaticResource MoreInfoButtonStyle}"
                                                MinimumWidthRequest="{OnPlatform iOS=120}"
                                                MinimumHeightRequest="{OnPlatform iOS=44}" 
                                                AutomationId="moreInfoButton" />
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </telerik:RadCollectionView.HeaderTemplate>
                <telerik:RadCollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto, *"
                            ColumnSpacing="14"
                            Padding="14, 8">
                            <telerik:RadBorder WidthRequest="44"
                                            CornerRadius="4"
                                            BackgroundColor="{StaticResource DefaultBackgroundColor}">
                                <Label Text="{Binding Icon}"
                                    TextColor="#7C59B6"
                                    FontSize="24"
                                    FontFamily="TelerikControlsIcons"
                                    HorizontalTextAlignment="Center"
                                    VerticalTextAlignment="Center" />
                            </telerik:RadBorder>
                            <Grid Grid.Column="1"
                                RowDefinitions="Auto, *"
                                VerticalOptions="Center">
                                <Label Text="{Binding DisplayName}"
                                    VerticalOptions="Center"
                                    Style="{StaticResource ControlNameLabelStyle}" 
                                    AutomationId="controlName" />
                                <Label Grid.Row="1"
                                    Text="{Binding ShortDescription}"
                                    Style="{StaticResource DescriptionLabelWithTruncationStyle}" 
                                    AutomationId="controlDescription" />
                            </Grid>
                            <telerik:RadBorder Grid.ColumnSpan="2"
                                            Style="{StaticResource StatusTagBorderStyle}"
                                            BackgroundColor="{Binding Status, Converter={StaticResource StatusTagToColorConverter}}"
                                            HorizontalOptions="End"
                                            VerticalOptions="Start"
                                            AutomationId="statusTag">
                                <Label Text="{Binding Status, Converter={StaticResource StatusTagToStringConverter}}"
                                    Style="{StaticResource StatusTagLabelStyle}" />
                            </telerik:RadBorder>
                        </Grid>
                    </DataTemplate>
                </telerik:RadCollectionView.ItemTemplate>
            </telerik:RadCollectionView>
        </Grid>
    </Grid>
</qsf:QSFPage>