<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:local="clr-namespace:SDKBrowserMaui.Examples.CollectionViewControl"
             x:Class="SDKBrowserMaui.Examples.CollectionViewControl.DragAndDropCategory.ReorderIndicatorExample.ReorderIndicatorStyling">
    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="telerik:CollectionViewReorderIndicator">
                <Setter Property="LineThickness" Value="3" />
                <Setter Property="LineColor" Value="#00897B" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>
    <!-- >> collectionview-reorder-indicator-styling -->
    <telerik:RadCollectionView x:Name="collectionView"
                               ItemsSource="{Binding Locations}"
                               DisplayMemberPath="City"
                               IsItemsReorderEnabled="True"
                               SelectionMode="Single">
        <telerik:RadCollectionView.BindingContext>
            <local:ViewModel />
        </telerik:RadCollectionView.BindingContext>
    </telerik:RadCollectionView>
    <!-- << collectionview-reorder-indicator-styling -->
</ContentView>
